	<javaClientGenerator
		targetPackage="com.abcproduct.domain.repository"
		targetProject="AbcProduct/src/main/java" type="XMLMAPPER">
	</javaClientGenerator>
	<table tableName="product" domainObjectName="Product" mapperName="ProductRepository"/>
