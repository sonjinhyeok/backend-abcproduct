	<!-- 自動生成されるModelクラス-->
	<javaModelGenerator
		targetPackage="com.abcproduct.domain.model"
		targetProject="AbcProduct/src/main/java">
	</javaModelGenerator>
	<sqlMapGenerator
		targetPackage="com.abcproduct.domain.repository"
		targetProject="AbcProduct/src/main/resources">
